<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/loadTweets"
        android:onClick="onClickLoadTweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/load_tweets" />

    <Button
        android:id="@+id/loadTweetsBinder"
        android:onClick="onClickLoadTweetsBinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loadTweets"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/load_tweets_binder" />

</RelativeLayout>
